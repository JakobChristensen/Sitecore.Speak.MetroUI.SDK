<Layout xmlns="http://www.sitecore.net/Sitecore-Speak-Intellisense/SitecoreSpeak72/core" ItemId="{DBE58A70-C766-4E13-9873-E3B186ECDFC3}">
  <Device Name="Internet Explorer" Layout="/sitecore/client/Metro/Layouts/Layouts/MetroLayout">
    <PageCode Placeholder="Page.Code" />
    <MetroNavigationBar ItemsDataSource="/sitecore/client/Metro/Content" ClickFieldName="$itemid" Placeholder="Page.Body" BrandText="Metro UI" BrandLink="/sitecore/client/Metro" HasContainer="True" />

    <MetroContainer Id="Container1" Placeholder="Page.Body">
      <MetroGrid Id="Grid1">
        <MetroRow Id="Row1" Columns="12">
          <MetroHeading1 Text="Icons" />
          <MetroParagraph Text="Metro UI CSS includes more then 300 icons in one font that can instantly be customized — size, color, drop shadow, and anything that can be done with the power of CSS." />
          <MetroExample Id="Example1">
            <MetroHeading2 Id="HeadingExample1" Text="icon-rocket">
              <MetroIcon Icon="icon-rocket" />
            </MetroHeading2>
          </MetroExample>

          <MetroParagraph Text="You can use build-in classes .on-left, .on-right to add margin 5px between icon and text and .on-left-more, .on-right-more to add margin 10px." />
          <MetroExample Id="Example2">
            <MetroHeading3 Id="HeadingExample2" Text="icon-rocket">
              <MetroIcon Icon="icon-rocket" Alignment="Left" />
            </MetroHeading3>
          </MetroExample>

          <MetroParagraph Text="Also you can change color style for icon with build-in color classes." />
          <MetroExample Id="Example3">
            <MetroHeading3 Id="HeadingExample3" Text="icon-rocket">
              <MetroIcon Icon="icon-rocket" Alignment="Left" Foreground="cyan" />
            </MetroHeading3>
          </MetroExample>
        </MetroRow>
      </MetroGrid>
    </MetroContainer>
  </Device>
</Layout>