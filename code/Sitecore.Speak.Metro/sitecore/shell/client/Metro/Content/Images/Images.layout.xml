<Layout xmlns="http://www.sitecore.net/Sitecore-Speak-Intellisense/SitecoreSpeak72/core" ItemId="{27109550-34B3-451C-A5A9-DEC597EF293B}">
  <Device Name="Internet Explorer" Layout="/sitecore/client/Metro/Layouts/Layouts/MetroLayout">
    <PageCode Placeholder="Page.Code" />
    <MetroNavigationBar ItemsDataSource="/sitecore/client/Metro/Content" ClickFieldName="$itemid" Placeholder="Page.Body" BrandText="Metro UI" BrandLink="/sitecore/client/Metro" HasContainer="True" />

    <MetroContainer Id="Container1" Placeholder="Page.Body">
      <MetroGrid Id="Grid1">
        <MetroRow Id="Row1" Columns="12">
          <MetroHeading1 Text="Images" />
          <MetroHeading2 Text="General" />
          <MetroParagraph Text="Add classes to an &lt; img> element to easily style images in any project." />
          <MetroExample Id="Example1">
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded" Size="Size2"/>
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Cycle" Size="Size2" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Polaroid" Size="Size2" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Cycle Polaroid" Size="Size2" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded Polaroid" Size="Size2" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Shadow" Size="Size2" />
          </MetroExample>

          <MetroHeading4 Text="Border color" />
          <MetroParagraph Text="You can change border color with build-in classes bd-*" />
          <MetroExample Id="Example2">
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded" Size="Size2" BorderColor="amber"/>
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Cycle" Size="Size2" BorderColor="cobalt" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Polaroid" Size="Size2" BorderColor="crimson" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Cycle Polaroid" Size="Size2" BorderColor="darkPink" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded Polaroid" Size="Size2" BorderColor="darkViolet" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Shadow" Size="Size2" BorderColor="teal" />
          </MetroExample>

          <MetroHeading4 Text="Background color" />
          <MetroParagraph Text="You can change background color for polaroid style with build-in classes bg-*" />
          <MetroExample Id="Example3">
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Polaroid" Size="Size3" Background="crimson" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Cycle Polaroid" Size="Size3" Background="darkPink" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded Polaroid" Size="Size3" Background="darkViolet" />
          </MetroExample>

          <MetroHeading4 Text="Image Size" />
          <MetroParagraph Text="Also you can set width of image with &lt; span1>...&lt; span12> classes." />
          <MetroExample Id="Example4">
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded" Size="Size1"/>
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded" Size="Size3" />
            <MetroImage Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Rounded" Size="Size5" />
          </MetroExample>

          <MetroHeading4 Text="Image Container" />
          <MetroParagraph Text="You can use class .image-container to create additional image presentation." />
          <MetroExample Id="Example5">
            <MetroImageOverlay Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Size="Size3" Text="Lorem Ipsum"/>
            <MetroImageOverlay Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Shape="Shadow" Size="Size3" Text="Lorem Ipsum" IsFluid="True" />
            <MetroImageOverlay Source="{D52E046B-BC26-4219-89DC-0BE67961764B}" Size="Size3" IsSelected="True" />
          </MetroExample>
          
        </MetroRow>
      </MetroGrid>
    </MetroContainer>
  </Device>
</Layout>