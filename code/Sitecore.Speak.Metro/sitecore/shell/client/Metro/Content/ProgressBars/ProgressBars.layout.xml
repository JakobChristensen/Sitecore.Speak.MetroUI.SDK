<Layout xmlns="http://www.sitecore.net/Sitecore-Speak-Intellisense/SitecoreSpeak72/core" ItemId="{3EC6B045-0939-4CBE-A4B4-9DE1129526C8}">
  <Device Name="Internet Explorer" Layout="/sitecore/client/Metro/Layouts/Layouts/MetroLayout">
    <PageCode Placeholder="Page.Code" />
    <MetroNavigationBar ItemsDataSource="/sitecore/client/Metro/Content" ClickFieldName="$itemid" Placeholder="Page.Body" BrandText="Metro UI" BrandLink="/sitecore/client/Metro" HasContainer="True" />

    <MetroContainer Id="Container1" Placeholder="Page.Body">
      <MetroGrid Id="Grid1">
        <MetroRow Id="Row1" Columns="12">
          <MetroHeading1 Text="Progress Bars" />
          <MetroParagraph Text="This component require metro-progressbar.js." />

          <MetroExample Id="Example1">
            <MetroProgressBar Value="10"/>
            <MetroProgressBar Value="30" Foreground="green"/>
            <MetroProgressBar Value="50" Foreground="red"/>
            <MetroProgressBar Value="70" Foreground="pink"/>
          </MetroExample>

          <MetroHeading2 Text="Any size for progress bar" />
          <MetroExample Id="Example2">
            <MetroProgressBar Value="10" Size="Large"/>                                                                         
            <MetroProgressBar Value="30" Foreground="green"/>
            <MetroProgressBar Value="50" Foreground="red" Size="Small"/>
          </MetroExample>

        </MetroRow>
      </MetroGrid>
    </MetroContainer>
  </Device>
</Layout>